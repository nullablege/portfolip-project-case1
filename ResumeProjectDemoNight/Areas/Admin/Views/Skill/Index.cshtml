@model List<ResumeProjectDemoNight.Entities.Skill>

<div class="mb-8">
    <div class="flex justify-between items-center">
        <div></div>
        <a asp-action="Create"
           class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-full font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2 text-sm">
            <span class="material-icons text-base">add</span> Yeni Yetenek Ekle
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="bg-white dark:bg-sidebar-dark p-6 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-700 group hover:shadow-lg transition-all">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-bold text-background-dark dark:text-white">@item.SkillName</h3>
                <span class="text-2xl font-bold" style="color: @item.SkillColor">@item.SkillPercent%</span>
            </div>
            <div class="w-full bg-slate-100 dark:bg-background-dark rounded-full h-3 overflow-hidden mb-4">
                <div class="h-full rounded-full transition-all duration-500" style="width: @item.SkillPercent%; background-color: @item.SkillColor"></div>
            </div>
            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <a asp-action="Update" asp-route-id="@item.SkillId"
                   class="bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">
                    <span class="material-icons text-sm">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.SkillId"
                   class="bg-red-50 dark:bg-red-900/20 text-red-500 p-2 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors"
                   onclick="return confirm('Bu yeteneği silmek istediğinizden emin misiniz?')">
                    <span class="material-icons text-sm">delete</span>
                </a>
            </div>
        </div>
    }
</div>
