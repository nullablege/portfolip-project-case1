@model List<ResumeProjectDemoNight.Entities.Stat>

<div class="mb-8">
    <div class="flex justify-between items-center">
        <div></div>
        <a asp-action="Create"
           class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-full font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2 text-sm">
            <span class="material-icons-outlined text-base">add</span> Yeni İstatistik Ekle
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    @foreach (var item in Model)
    {
        <div class="bg-gradient-to-br from-primary to-card-blue p-6 rounded-3xl shadow-lg text-white relative overflow-hidden group hover:shadow-xl transition-all">
            <div class="relative z-10">
                <div class="flex items-center justify-between mb-4">
                    <span class="material-icons-outlined text-4xl opacity-80">analytics</span>
                </div>
                <h3 class="text-4xl font-bold mb-2">@item.Value</h3>
                <p class="text-white/80 font-medium text-sm">@item.Title</p>
            </div>
            <div class="absolute -bottom-6 -right-6 w-24 h-24 bg-white/10 rounded-full transition-transform group-hover:scale-150 duration-500"></div>
            <div class="absolute top-4 right-4 flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity z-20">
                <a asp-action="Update" asp-route-id="@item.StatId"
                   class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors">
                    <span class="material-icons-outlined text-sm">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.StatId"
                   class="bg-red-500/80 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-red-600 transition-colors"
                   onclick="return confirm('Bu istatistiği silmek istediğinizden emin misiniz?')">
                    <span class="material-icons-outlined text-sm">delete</span>
                </a>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-12 text-center shadow-sm border border-slate-100 dark:border-slate-700">
        <span class="material-icons-outlined text-6xl text-slate-300 dark:text-slate-700 mb-4">analytics</span>
        <p class="text-slate-500 dark:text-slate-400">Henüz istatistik eklenmemiş.</p>
        <p class="text-xs text-slate-400 mt-2">Başarılarınızı sayılarla gösterin (Tamamlanan proje, mutlu müşteri, vb.)</p>
    </div>
}
