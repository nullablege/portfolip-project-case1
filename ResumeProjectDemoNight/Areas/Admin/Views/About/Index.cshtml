@model List<ResumeProjectDemoNight.Entities.About>

<div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-8 shadow-sm border border-slate-100 dark:border-slate-700">
        @if (Model != null && Model.Any())
        {
            var about = Model.First();
            <form method="post" asp-action="Update" class="space-y-6">
                <input type="hidden" name="AboutId" value="@about.AboutId" />

                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Ad Soyad</label>
                    <input type="text" name="NameSurname" value="@about.NameSurname"
                           class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                           placeholder="Adınız ve soyadınız" required />
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Profil Görsel URL</label>
                    <input type="text" name="ImageUrl" value="@about.ImageUrl"
                           class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                           placeholder="https://..." />
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Hakkımda</label>
                    <textarea name="Description" rows="6"
                              class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white resize-none"
                              placeholder="Kendiniz hakkında bilgi..." required>@about.Description</textarea>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit"
                            class="flex-1 bg-primary text-white px-8 py-3 rounded-full font-bold shadow-lg shadow-primary/20 hover:opacity-90 transition-all">
                        Güncelle
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-8">
                <p class="text-slate-500">Henüz profil bilgisi eklenmemiş.</p>
            </div>
        }
    </div>

    <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-6 shadow-sm border border-slate-100 dark:border-slate-700">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-bold text-background-dark dark:text-white">Sosyal Medya</h3>
                <a asp-area="Admin" asp-controller="SocialMedia" asp-action="Create" class="text-primary hover:opacity-80">
                    <span class="material-icons-outlined">add_circle</span>
                </a>
            </div>
            <a asp-area="Admin" asp-controller="SocialMedia" asp-action="Index" class="text-sm text-primary hover:underline">
                Sosyal medya hesaplarını yönet →
            </a>
        </div>

        <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-6 shadow-sm border border-slate-100 dark:border-slate-700">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-lg font-bold text-background-dark dark:text-white">Referanslar</h3>
                <a asp-area="Admin" asp-controller="Testimonial" asp-action="Create" class="text-primary hover:opacity-80">
                    <span class="material-icons-outlined">add_circle</span>
                </a>
            </div>
            <a asp-area="Admin" asp-controller="Testimonial" asp-action="Index" class="text-sm text-primary hover:underline">
                Müşteri yorumlarını yönet →
            </a>
        </div>
    </div>
</div>
