@model List<ResumeProjectDemoNight.Entities.SocialMedia>

<div class="mb-8">
    <div class="flex justify-between items-center">
        <div></div>
        <a asp-action="Create"
           class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-full font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2 text-sm">
            <span class="material-icons-outlined text-base">add</span> Yeni Hesap Ekle
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="bg-white dark:bg-sidebar-dark p-6 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-700 group hover:shadow-lg transition-all">
            <div class="flex items-center gap-4 mb-4">
                <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center">
                    <span class="material-icons-outlined text-primary">share</span>
                </div>
                <div class="flex-1">
                    <h3 class="font-bold text-background-dark dark:text-white">@item.Name</h3>
                    <a href="@item.Link" target="_blank" class="text-xs text-primary hover:underline truncate block">
                        @item.Link
                    </a>
                </div>
            </div>
            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                <a asp-action="Update" asp-route-id="@item.SocialMediaId"
                   class="bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">
                    <span class="material-icons-outlined text-sm">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.SocialMediaId"
                   class="bg-red-50 dark:bg-red-900/20 text-red-500 p-2 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors"
                   onclick="return confirm('Bu sosyal medya hesabını silmek istediğinizden emin misiniz?')">
                    <span class="material-icons-outlined text-sm">delete</span>
                </a>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-12 text-center shadow-sm border border-slate-100 dark:border-slate-700">
        <span class="material-icons-outlined text-6xl text-slate-300 dark:text-slate-700 mb-4">share</span>
        <p class="text-slate-500 dark:text-slate-400">Henüz sosyal medya hesabı eklenmemiş.</p>
    </div>
}
