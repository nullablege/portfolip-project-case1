@model ResumeProjectDemoNight.Entities.SocialMedia

<div class="max-w-2xl mx-auto">
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-8 shadow-sm border border-slate-100 dark:border-slate-700">
        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="SocialMediaId" />

            <div>
                <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Platform Adı</label>
                <input type="text" asp-for="Name"
                       class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                       placeholder="Örn: Twitter, LinkedIn, GitHub" required />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Profil Linki</label>
                <input type="url" asp-for="Link"
                       class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                       placeholder="https://twitter.com/kullaniciadi" required />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">İkon Adı (Material Icon)</label>
                <input type="text" asp-for="Icon"
                       class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                       placeholder="Örn: share, link, public" />
                <p class="text-xs text-slate-400 mt-1">
                    <a href="https://fonts.google.com/icons" target="_blank" class="text-primary hover:underline">
                        Material Icons katalogunu görüntüle →
                    </a>
                </p>
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit"
                        class="flex-1 bg-primary text-white px-8 py-3 rounded-full font-bold shadow-lg shadow-primary/20 hover:opacity-90 transition-all">
                    Güncelle
                </button>
                <a asp-action="Index"
                   class="flex-1 text-center bg-slate-200 dark:bg-slate-700 text-background-dark dark:text-white px-8 py-3 rounded-full font-bold hover:opacity-90 transition-all">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
