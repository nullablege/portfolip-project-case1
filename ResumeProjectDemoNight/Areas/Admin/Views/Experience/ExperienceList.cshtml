@model List<ResumeProjectDemoNight.Entities.Experience>

@{
    ViewData["Title"] = "ExperienceList";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-6xl mx-auto space-y-8">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-background-dark dark:text-white">Deneyim Listesi</h3>
                <p class="text-slate-500 dark:text-slate-400 text-sm mt-1">Deneyimlerle ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a asp-area="Admin" asp-controller="Experience" asp-action="CreateExperience" class="flex items-center gap-2 bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all shadow-lg shadow-primary/20">
                <span class="material-icons-outlined text-white" style="font-size: 20px;">add</span>
                Yeni Deneyim Girişi
            </a>
        </div>
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-900/50">
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">#</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Şirket</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Unvan</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Periyot</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Açıklama</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Sil</th>
                            <th class="px-6 py-4 text-xs font-semibold text-slate-400 uppercase tracking-wider">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        @foreach(var item in Model)
                        {
                            <tr class="hover:bg-slate-800/30 transition-colors group">
                                <td class="px-6 py-5 text-slate-300">@item.ExperienceId</td>                     
                                <td class="px-6 py-5 text-slate-300">@item.CompanyName</td>                     
                                <td class="px-6 py-5 text-slate-300">@item.Title</td>                     
                                <td class="px-6 py-5 text-slate-300">@item.WorkPeriodDate</td>                     
                                <td class="px-6 py-5 text-slate-300">@item.Description</td>                     
                                <td class="px-6 py-5"><a asp-area="Admin" asp-controller="Experience" asp-action="DeleteExperience" asp-route-id="@item.ExperienceId" class="text-red-400 hover:text-red-300">Sil</a></td>                     
                                <td class="px-6 py-5"><a asp-area="Admin" asp-controller="Experience" asp-action="UpdateExperience" asp-route-id="@item.ExperienceId" class="text-primary hover:text-primary/80">Güncelle</a></td>                     
                            </tr>
                        }
                     
                       
                    </tbody>
                </table>
            </div>
            <div class="px-6 py-4 bg-slate-900/30 flex items-center justify-between border-t border-slate-800">
                <span class="text-slate-500 text-xs font-medium uppercase tracking-wider">Toplam @Model.Count Adet Deneyim Listeleniyor.</span>
                <div class="flex gap-2">
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Önceki</button>
                    <button class="px-3 py-1.5 rounded border border-slate-700 text-slate-400 hover:text-white transition-colors text-xs font-bold">Sonraki</button>
                </div>
            </div>
        </div>
      
    </div>
</div>