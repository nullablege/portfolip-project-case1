@model List<ResumeProjectDemoNight.Entities.Service>

<div class="mb-8">
    <div class="flex justify-between items-center">
        <div></div>
        <a asp-area="Admin" asp-controller="Service" asp-action="Create"
           class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-full font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2 text-sm">
            <span class="material-icons-outlined text-base">add</span> Yeni Hizmet Ekle
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
    @foreach (var item in Model)
    {
        <div class="p-6 rounded-3xl shadow-lg text-white relative overflow-hidden group hover:shadow-xl transition-all"
             style="background-color: @item.Color">
            <div class="mb-6 flex justify-center">
                <div class="bg-white bg-opacity-20 p-4 rounded-full w-16 h-16 flex items-center justify-center">
                    @if (!string.IsNullOrEmpty(item.ImageUrl) && item.ImageUrl.StartsWith("http"))
                    {
                        <img src="@item.ImageUrl" alt="@item.Title" class="w-8 h-8 object-contain filter brightness-0 invert" />
                    }
                    else
                    {
                        <span class="material-icons-outlined text-3xl">@(string.IsNullOrEmpty(item.ImageUrl) ? "layers" : item.ImageUrl)</span>
                    }
                </div>
            </div>
            <h3 class="text-2xl font-bold mb-4">@item.Title</h3>
            <p class="text-sm opacity-90 leading-relaxed mb-8">
                @item.Description
            </p>
            <div class="flex justify-center gap-3 mt-4 lg:opacity-0 group-hover:opacity-100 transition-opacity">
                <a asp-action="Update" asp-route-id="@item.ServiceId"
                   class="bg-white text-card-blue p-3 rounded-full hover:bg-slate-100 transition-colors shadow-md">
                    <span class="material-icons-outlined text-sm">edit</span>
                </a>
                <a asp-action="Delete" asp-route-id="@item.ServiceId"
                   class="bg-white text-red-500 p-3 rounded-full hover:bg-slate-100 transition-colors shadow-md"
                   onclick="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?')">
                    <span class="material-icons-outlined text-sm">delete</span>
                </a>
            </div>
        </div>
    }
</div>

<div class="bg-white dark:bg-sidebar-dark rounded-3xl p-8 shadow-sm border border-slate-100 dark:border-slate-700 overflow-hidden">
    <h3 class="text-xl font-bold mb-6 text-background-dark dark:text-white">Hizmet Listesi</h3>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
        <thead>
                <tr class="border-b border-slate-100 dark:border-slate-700 text-slate-400 uppercase text-xs tracking-wider">
                    <th class="pb-4 font-medium px-4">Hizmet Adı</th>
                    <th class="pb-4 font-medium px-4">İkon</th>
                    <th class="pb-4 font-medium px-4">Renk</th>
                    <th class="pb-4 font-medium px-4">Açıklama</th>
                    <th class="pb-4 font-medium text-right px-4">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-50 dark:divide-slate-700/50">
                @foreach (var item in Model)
                {
                    <tr class="group hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors">
                        <td class="py-6 px-4 font-medium text-background-dark dark:text-white">@item.Title</td>
                        <td class="py-6 px-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl) && item.ImageUrl.StartsWith("http"))
                            {
                                <img src="@item.ImageUrl" alt="@item.Title" class="w-6 h-6 object-contain" />
                            }
                            else
                            {
                                <span class="material-icons-outlined" style="color: @item.Color">@(string.IsNullOrEmpty(item.ImageUrl) ? "layers" : item.ImageUrl)</span>
                            }
                        </td>
                        <td class="py-6 px-4">
                            <span class="inline-block w-4 h-4 rounded-full mr-2 align-middle" style="background-color: @item.Color"></span>
                            <span class="text-xs text-slate-500">@item.Color</span>
                        </td>
                        <td class="py-6 px-4 text-sm text-slate-500 max-w-xs truncate">@item.Description</td>
                        <td class="py-6 px-4 text-right">
                            <a asp-action="Update" asp-route-id="@item.ServiceId" class="text-slate-400 hover:text-primary transition-colors mr-3">
                                <span class="material-icons-outlined text-sm">edit</span>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceId"
                               class="text-slate-400 hover:text-red-500 transition-colors"
                               onclick="return confirm('Bu hizmeti silmek istediğinizden emin misiniz?')">
                                <span class="material-icons-outlined text-sm">delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .card-shadow {
        box-shadow: 0px 5px 20px 0px rgba(108, 108, 229, 0.5);
    }
</style>
