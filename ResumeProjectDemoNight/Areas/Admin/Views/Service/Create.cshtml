@model ResumeProjectDemoNight.Entities.Service

<div class="max-w-4xl mx-auto">
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-8 shadow-sm border border-slate-100 dark:border-slate-700">
        <form method="post" class="space-y-6">
            <div>
                <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Hizmet Başlığı</label>
                <input type="text" asp-for="Title"
                       class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                       placeholder="Örn: UI/UX Tasarım" required />
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Hizmet Açıklaması</label>
                <textarea asp-for="Description" rows="4"
                          class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                          placeholder="Hizmet detaylarını yazın..." required></textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">İkon Adı (Material Icons)</label>
                    <input type="text" asp-for="ImageUrl"
                           class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                           placeholder="Örn: code, design_services, settings" />
                    <p class="text-xs text-slate-400 mt-1">
                        <a href="https://fonts.google.com/icons" target="_blank" class="text-primary hover:underline">Material Icons Kataloğu</a>
                    </p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Renk</label>
                    <div class="flex items-center gap-3">
                        <input type="color" id="serviceColorPicker" value="#6C6CE5"
                               class="w-16 h-12 rounded-lg cursor-pointer border-2 border-slate-300 dark:border-slate-600"
                               onchange="document.getElementById('serviceColorText').value = this.value;" />
                        <input type="text" id="serviceColorText" asp-for="Color" value="#6C6CE5"
                               class="flex-1 px-4 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white"
                               placeholder="#6C6CE5"
                               oninput="document.getElementById('serviceColorPicker').value = this.value;" />
                    </div>
                </div>
            </div>

            <div class="flex gap-4 pt-4">
                <button type="submit"
                        class="flex-1 bg-primary text-white px-8 py-3 rounded-full font-bold shadow-lg shadow-primary/20 hover:opacity-90 transition-all">
                    Kaydet
                </button>
                <a asp-action="Index"
                   class="flex-1 text-center bg-slate-200 dark:bg-slate-700 text-background-dark dark:text-white px-8 py-3 rounded-full font-bold hover:opacity-90 transition-all">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
