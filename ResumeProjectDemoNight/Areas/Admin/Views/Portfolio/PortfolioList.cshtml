@model List<ResumeProjectDemoNight.Entities.Portfolio>

@{
    ViewData["Title"] = "PortfolioList";
}

<div class="mb-8">
    <div class="flex justify-between items-center">
        <div></div>
        <a asp-area="Admin" asp-controller="Portfolio" asp-action="CreatePortfolio"
           class="bg-primary hover:bg-opacity-90 text-white px-6 py-2 rounded-full font-bold shadow-lg shadow-primary/20 transition-all flex items-center gap-2 text-sm">
            <span class="material-icons-outlined text-base">add</span> Yeni Proje Ekle
        </a>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
    @foreach (var item in Model)
    {
        <div class="bg-white dark:bg-sidebar-dark rounded-3xl overflow-hidden shadow-sm border border-slate-100 dark:border-slate-700 group hover:shadow-lg transition-all">
            @if (!string.IsNullOrEmpty(item.ImageUrl))
            {
                <div class="aspect-video bg-slate-200 dark:bg-slate-800 overflow-hidden">
                    <img src="@item.ImageUrl" alt="@item.ProjectTitle" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                </div>
            }
            else
            {
                <div class="aspect-video bg-gradient-to-br from-primary to-card-blue flex items-center justify-center">
                    <span class="material-icons-outlined text-white text-6xl">image</span>
                </div>
            }
            <div class="p-6">
                <div class="flex items-start justify-between mb-3">
                    <h3 class="font-bold text-lg text-background-dark dark:text-white">@item.ProjectTitle</h3>
                    @if (item.Status)
                    {
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                            Aktif
                        </span>
                    }
                    else
                    {
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400">
                            Pasif
                        </span>
                    }
                </div>
                <div class="flex justify-end gap-2">
                    <a asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" asp-route-id="@item.PortfolioId"
                       class="bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-300 p-2 rounded-lg hover:bg-slate-200 dark:hover:bg-slate-700 transition-colors">
                        <span class="material-icons-outlined text-sm">edit</span>
                    </a>
                    <a asp-area="Admin" asp-controller="Portfolio" asp-action="DeletePortfolio" asp-route-id="@item.PortfolioId"
                       class="bg-red-50 dark:bg-red-900/20 text-red-500 p-2 rounded-lg hover:bg-red-100 dark:hover:bg-red-900/30 transition-colors"
                       onclick="return confirm('Bu projeyi silmek istediğinizden emin misiniz?')">
                        <span class="material-icons-outlined text-sm">delete</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-12 text-center shadow-sm border border-slate-100 dark:border-slate-700">
        <span class="material-icons-outlined text-6xl text-slate-300 dark:text-slate-700 mb-4">work_outline</span>
        <p class="text-slate-500 dark:text-slate-400">Henüz proje eklenmemiş.</p>
    </div>
}
