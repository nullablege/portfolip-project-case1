@model ResumeProjectDemoNight.Entities.ProfileTitle

<div class="max-w-3xl mx-auto">
    <div class="bg-gradient-to-br from-primary to-card-blue p-8 rounded-3xl shadow-lg text-white mb-8">
        <div class="flex items-center gap-4 mb-4">
            <span class="material-icons-outlined text-5xl opacity-80">work</span>
            <div>
                <h3 class="text-2xl font-bold">Profil Başlığınız</h3>
                <p class="text-white/80 text-sm">Ana sayfada adınızın altında görüntülenen başlık</p>
            </div>
        </div>
        @if (Model != null)
        {
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 mt-4">
                <p class="text-white/60 text-xs mb-1">Mevcut Başlık:</p>
                <p class="text-xl font-semibold">@Model.Title</p>
            </div>
        }
    </div>

    <div class="bg-white dark:bg-sidebar-dark rounded-3xl p-8 shadow-sm border border-slate-100 dark:border-slate-700">
        @if (Model != null)
        {
            <form method="post" class="space-y-6">
                <input type="hidden" asp-for="ProfileTitleId" />

                <div>
                    <label class="block text-sm font-medium text-slate-500 dark:text-slate-400 mb-2">Profil Başlığı</label>
                    <input type="text" asp-for="Title"
                           class="w-full px-5 py-3 rounded-xl bg-background-light dark:bg-background-dark border-none focus:ring-2 focus:ring-primary dark:text-white text-lg"
                           placeholder="Örn: Full Stack Developer | UI/UX Designer" required />
                    <p class="text-xs text-slate-400 mt-2">
                        Profesyonel unvanınızı ve uzmanlık alanlarınızı belirtin
                    </p>
                </div>

                <div class="bg-yellow-50 dark:bg-yellow-900/10 border border-yellow-200 dark:border-yellow-800 rounded-xl p-4">
                    <div class="flex gap-3">
                        <span class="material-icons-outlined text-yellow-600 dark:text-yellow-500">tips_and_updates</span>
                        <div class="flex-1">
                            <h4 class="text-sm font-semibold text-yellow-700 dark:text-yellow-400 mb-1">İpucu</h4>
                            <p class="text-xs text-yellow-600 dark:text-yellow-500">
                                Başlığınızı kısa ve öz tutun. Birden fazla uzmanlık alanınız varsa "|" işareti ile ayırabilirsiniz.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="flex gap-4 pt-4">
                    <button type="submit"
                            class="flex-1 bg-primary text-white px-8 py-3 rounded-full font-bold shadow-lg shadow-primary/20 hover:opacity-90 transition-all flex items-center justify-center gap-2">
                        <span class="material-icons-outlined text-sm">save</span>
                        Güncelle
                    </button>
                </div>
            </form>
        }
        else
        {
            <div class="text-center py-8">
                <span class="material-icons-outlined text-6xl text-slate-300 dark:text-slate-700 mb-4">error_outline</span>
                <p class="text-slate-500 dark:text-slate-400">Profil başlığı bulunamadı.</p>
                <p class="text-xs text-slate-400 mt-2">Veritabanında ProfileTitle kaydı oluşturmalısınız.</p>
            </div>
        }
    </div>
</div>
