@model List<ResumeProjectDemoNight.Entities.Service>

<section id="services">

	<div class="container">

		<h2 class="section-title wow fadeInUp">Hizmetlerim</h2>

		<div class="spacer" data-height="60"></div>

		<div class="row">

			@foreach(var item in Model)
			{
				<div class="col-md-4">
					<div class="service-box rounded data-background padding-30 text-center text-light shadow-blue" data-color="@item.Color">
						<img src="@item.ImageUrl" alt="@item.Title" />
						<h3 class="mb-3 mt-0">@item.Title</h3>
						<p class="mb-0">@item.Description</p>
					</div>
					<div class="spacer d-md-none d-lg-none" data-height="30"></div>
				</div>
			}

		</div>

		<div class="mt-5 text-center">
			<p class="mb-0">Bir projeniz mi var? <a href="#contact">Buradan</a> bana yazın! 👋</p>
		</div>

	</div>

</section>