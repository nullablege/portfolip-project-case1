@model List<ResumeProjectDemoNight.Entities.Portfolio>

<section id="works">

	<div class="container">

		<h2 class="section-title wow fadeInUp">Projelerim</h2>

		<div class="spacer" data-height="60"></div>

		@await Component.InvokeAsync("_DefaultCategoryComponentPartial")


		<div class="row portfolio-wrapper">


			@foreach(var item in Model)
			{
				<div class="col-md-4 col-sm-6 grid-item art">
					<a href="@item.ImageUrl" class="work-image">
						<div class="portfolio-item rounded shadow-dark">
							<div class="details">
								<span class="term">Kategori</span>
								<h4 class="title">@item.ProjectTitle</h4>
								<span class="more-button"><i class="icon-magnifier-add"></i></span>
							</div>
							<div class="thumb">
								<img src="@item.ImageUrl" alt="Portfolio-title" />
								<div class="mask"></div>
							</div>
						</div>
					</a>
				</div>
			}
		</div>

		<div class="load-more text-center mt-4">
			<a href="javascript:" class="btn btn-default"><i class="fas fa-spinner"></i> Load more</a>
			<ul class="portfolio-pagination list-inline d-none">
				<li class="list-inline-item">1</li>
				<li class="list-inline-item"><a href="works-2.html">2</a></li>
			</ul>
		</div>

	</div>

</section>