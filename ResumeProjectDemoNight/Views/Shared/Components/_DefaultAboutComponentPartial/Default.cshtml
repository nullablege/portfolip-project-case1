@model AboutComponentViewModel

<section id="about">

	<div class="container">

		<h2 class="section-title wow fadeInUp">Hakkımda</h2>

		<div class="spacer" data-height="60"></div>

		<div class="row">

			<div class="col-md-3">
				<div class="text-center text-md-left">
					<img src="@Model.ImageUrl" alt="@Model.NameSurname" />
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>

			<div class="col-md-9 triangle-left-md triangle-top-sm">
				<div class="rounded bg-white shadow-dark padding-30">
					<div class="row">
						<div class="col-md-6">
							<p>@Model.Description</p>
							<div class="mt-3">
								<a href="/Cv/Cv.pdf" class="btn btn-default">Download CV</a>
							</div>
							<div class="spacer d-md-none d-lg-none" data-height="30"></div>
						</div>
						<div class="col-md-6">
							@foreach(var x in Model.Skills)
							{
								<div class="skill-item">
								<div class="skill-info clearfix">
									<h4 class="float-left mb-3 mt-0">@x.SkillName</h4>
									<span class="float-right">@x.SkillPercent%</span>
								</div>
								<div class="progress">
									<div class="progress-bar data-background" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="@x.SkillPercent" data-color="@x.SkillColor">
									</div>
								</div>
								<div class="spacer" data-height="20"></div>
							</div>
							}

						</div>
					</div>
				</div>
			</div>

		</div>

		<div class="spacer" data-height="70"></div>

		<div class="row">

			@foreach(var x in Model.Stats)
			{
							<div class="col-md-3 col-sm-6">
				<div class="fact-item">
					<span class="icon icon-fire"></span>
					<div class="details">
						<h3 class="mb-0 mt-0 number"><em class="count">@x.Value</em></h3>
						<p class="mb-0">@x.Title</p>
					</div>
				</div>
				<div class="spacer d-md-none d-lg-none" data-height="30"></div>
			</div>
			}



		</div>

	</div>

</section>